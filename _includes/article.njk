---
layout: base
permalink: "/{{page.fileSlug}}/"
---

<div class="content">
  <h2 class="title is-2 is-size-5-mobile">{{ title }}</h2>

  <p class="is-size-7 is-uppercase has-text-grey">
    {{ page.date.toLocaleString('en', { dateStyle: "long", timeZone: 'America/Montreal' } ) }}
  </p>

  {% if image %}
    <p><img class="article-image" src="/images/articles/{{ image }}"></p>
  {% endif %}

  {{ content | safe }}
</div>
